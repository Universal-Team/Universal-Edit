#---------------------------------------------------------------------------------
.SUFFIXES:
#---------------------------------------------------------------------------------
ifeq ($(strip $(DEVKITARM)),)
$(error "Please set DEVKITARM in your environment. export DEVKITARM=<path to>devkitARM")
endif

.PHONY: ds 3ds

#---------------------------------------------------------------------------------
# main targets
#---------------------------------------------------------------------------------
all: ds 3ds

#---------------------------------------------------------------------------------
ds:
	$(MAKE) -C DS
#---------------------------------------------------------------------------------
3ds:
	$(MAKE) -C 3DS

#---------------------------------------------------------------------------------
clean:
	$(MAKE) -C arm9 clean
	$(MAKE) -C graphics clean
	rm -f $(TARGET).nds $(TARGET).arm9
